# Source Database (backup/restore instance)
SOURCE_DB_SERVER=your-source-server.database.windows.net
SOURCE_DB_NAME=your_source_database
SOURCE_DB_USER=your_username
SOURCE_DB_PASSWORD=your_password

# Target Database (destination instance to restore to)
TARGET_DB_SERVER=your-target-server.database.windows.net
TARGET_DB_NAME=your_target_database
TARGET_DB_USER=your_username
TARGET_DB_PASSWORD=your_password

# Optional: Connection pool settings
DB_POOL_MIN=0
DB_POOL_MAX=10
DB_REQUEST_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=30000